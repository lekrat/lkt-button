{
  "name": "lkt-button",
  "version": "1.0.3",
  "description": "",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "private": true,
  "files": [
    "assets/*",
    "dist/*",
    "src/**/*.vue"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/lkt-button.es.js",
      "require": "./dist/lkt-button.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "types": "./dist/types/index.d.ts",
  "scripts": {
